@using ASP.NETSaturdayProject.Models
@model List<Food>
<div class="container">
    <h1> List of Foods</h1>
    <table class="table table-dark">
        <tr>
            <td>ID</td>
            <td>NAME</td>
            <td>CUISINE</td>
            <td>PRICE</td>
            <td>QUANTITY</td>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].id</td>
                <td>@Model[i].name</td>
                <td>@Model[i].cuisine</td>
                <td>@Model[i].price</td>
                <td>@Model[i].Quantity</td>
            </tr>
        }
    </table>
</div>
